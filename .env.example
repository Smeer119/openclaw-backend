# Environment variables for OpenClaw
# Copy to .env on your VPS

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=cortex-memories

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://openclaw:password@localhost:5432/openclaw_db

# Server Configuration
PORT=8000
NODE_ENV=production
ALLOWED_ORIGINS=https://cortex.yourdomain.com,http://localhost:5173
